{
  "name": "anglow",
  "version": "0.0.0",
  "keywords": [
    "angular",
    "Angular/Signals",
    "ngrx",
    "rxjs",
    "nodejs",
    "lowdb"
  ],
  "scripts": {
    "ng": "ng",
    "start": "concurrently --raw --prefix-colors --kill-others \"npm run dev\" \"npm run cli\" ",
    "build": "npm run build:cli && npm run build:srv",
    "build:cli": "ng build --ts-config tsconfig.cli.json",
    "build:srv": "tsc && copyfiles -u 3 ./dist/backend/srv/**/* ./dist/backend/srv/* ./dist/backend && rimraf ./dist/backend/src ./dist/backend/srv",
    "watch": "concurrently \"ng build --watch --configuration development\" ",
    "test": "ng test",
    "cli": "ng serve --proxy-config",
    "serve": "node dist/index.js",
    "srv": "npm run srv:clean && npm run srv:build && npm run srv:run",
    "srv:build": "tsc --build tsconfig.srv.json",
    "srv:clean": "rimraf --glob './srv/**/*.js'",
    "srv:run": "ts-node srv/index.js --project tsconfig.srv.json",
    "dev": "concurrently \"npx tsc --build tsconfig.srv.json --watch\" \"nodemon -q ./srv/index\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/flex-layout": "^15.0.0-beta.42",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.4",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@ngrx/component-store": "^17.0.1",
    "@ngrx/signals": "^17.0.1",
    "@swimlane/ngx-datatable": "^20.1.0",
    "@types/express-validator": "^3.0.0",
    "@types/lowdb": "^1.0.15",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "immer": "^10.0.3",
    "joi-typescript-validator": "^0.2.0",
    "moment": "^2.29.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.6",
    "@angular/cli": "^17.0.6",
    "@angular/compiler-cli": "^17.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.10.4",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "crc": "^4.3.2",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lowdb": "^6.1.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2",
    "ws": "^8.14.2"
  },
  "description": "This project was generated with [Angular CLI](https://github.com/angular/angular-cli) version 17.0.6.",
  "main": "index.js",
  "type": "module",
